<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FBDE"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/logo"
        android:src="@drawable/china"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toBottomOf="@id/gifImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:rotation="0"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/gifImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="bold"
        android:textSize="64dp"
        android:fontFamily="@font/font"
        android:textColor="#89C35C"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/grass"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/grass"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:id="@+id/bamboo_group"
        android:layout_marginLeft="-15dp"
        android:src="@drawable/bamboo_forest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/bamboo__"
        android:rotation="0"
        android:src="@drawable/bamboo__"
        android:layout_marginBottom="-12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/panda"
        android:src="@drawable/panda"
        android:scaleX="1"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="-15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/stone"
        android:src="@drawable/stone"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>